<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RadioGroupButtonStype">
        <item name="android:textColor">@color/main_tab_color_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchView">
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">@dimen/big_fond</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/tool_bar_seachview_background</item>
    </style>

    <style name="line">
        <item name="android:background">#D5D5D5</item>
    </style>
    <style name="line_vertical" parent="line">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="toolbarStyle" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>

    </style>

</resources>
