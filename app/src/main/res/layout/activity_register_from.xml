<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/account"
            android:hint="用户名"
            android:lines="1"
            android:background="@color/colorWhite"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/phone"
            android:lines="1"
            android:layout_below="@+id/account"
            android:hint="电话"
            android:inputType="number"
            android:background="@color/colorWhite"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/psw_1"
            android:hint="密码"
            android:inputType="textPassword"
            android:lines="1"
            android:background="@color/colorWhite"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/psw_2"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:lines="1"
            android:background="@color/colorWhite"
            android:layout_below="@+id/psw_1"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/email"
            android:hint="邮箱"
            android:lines="1"
            android:background="@color/colorWhite"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/question"
            android:hint="密码提示问题"
            android:lines="1"
            android:background="@color/colorWhite"
            android:layout_below="@+id/email"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/asw"
            android:hint="密码提示答案"
            android:lines="1"
            android:background="@color/colorWhite"
            android:layout_below="@+id/question"
            android:textSize="@dimen/big_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_backgroud"
            android:text="注  册"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>