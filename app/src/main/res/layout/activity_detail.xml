<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBlue"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/colorWhite"
        style="@style/toolbarStyle">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/detail_product_top_background">
        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="分享"
            android:layout_marginLeft="20dp"
            android:drawableTop="@drawable/share"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/buy_btn"
            android:background="#FF9800"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="加入购物车"
            android:textColor="@color/colorBackground"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/material_green"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="购买"
            android:textColor="@color/colorBackground"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_url"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="260dp" />
            <LinearLayout
                android:background="@drawable/detail_product_info_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <TextView
                    android:text="发送机"
                    android:layout_marginTop="10dp"
                    android:id="@+id/name"
                    android:textSize="@dimen/bigger_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="配件类型：10073"
                    android:layout_marginTop="10dp"
                    android:id="@+id/parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/price"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/big_fond"
                        android:text="价格：￥2222"/>

                    <TextView
                        android:id="@+id/stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:text="库存：1"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/big_fond" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/btn_jian"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="-"/>
                    <EditText
                        android:id="@+id/edit_num"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/btn_jian"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/detail_product_num_j_background"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/btn_jia"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_toRightOf="@+id/edit_num"
                        android:gravity="center"
                        android:background="@drawable/detail_product_num_background"
                        android:text="+"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图文详情"
                    android:textSize="@dimen/bigger_font"
                    android:textColor="@color/material_blue"
                    android:layout_marginLeft="20dp"/>

                <WebView
                    android:id="@+id/product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>