<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.se_time.mall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".application.MallApplication"
        android:allowBackup="true"
        android:icon="@drawable/mall"
        android:label="@string/app_name"
        android:roundIcon="@drawable/mall"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="adjustPan"
        android:theme="@style/AppTheme">


        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity"/>
        <activity android:name=".ui.DetailActivity"/>
        <activity android:name=".ui.ConfirmOrderActivity"/>
        <activity android:name=".ui.AddressListActivity"/>
        <activity android:name=".ui.AddAddressActivity"/>
        <activity android:name=".ui.OrderListActivity"/>
        <activity android:name=".ui.OrderDetailActivity"/>
        <activity android:name=".ui.RegisterActivity"/>
        <activity android:name=".ui.SearchActivity"/>
        <activity android:name=".ui.PayActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.example.se_time.mall.config.GlideModelConfig"
            android:value="GlideModel" />


    </application>

</manifest>